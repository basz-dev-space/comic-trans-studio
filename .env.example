# Environment variables for comic-trans-studio
# Copy this file to `.env` and configure before running the app.

# SQLite database (file-based, no external database server needed)
# Uses absolute path to avoid working directory issues
DATABASE_URL=file:/workspaces/comic-trans-studio/prisma/dev.db

# Runtime settings
NODE_ENV=development
PORT=5173

# Session TTL (seconds)
SESSION_TTL_SECONDS=86400

# Admin management credentials
ADMIN_USERNAME=admin@demo.local
ADMIN_PASSWORD=change-me
